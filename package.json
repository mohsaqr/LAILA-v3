{
  "name": "laila-lms",
  "version": "3.0.0",
  "description": "LAILA - AI-powered Learning Management System",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "db:push": "cd server && npx prisma db push",
    "db:seed": "cd server && npx prisma db seed",
    "db:studio": "cd server && npx prisma studio",
    "db:reset": "cd server && npx prisma migrate reset",
    "lint": "cd client && npm run lint",
    "clean": "rm -rf server/node_modules client/node_modules node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "lms",
    "education",
    "ai",
    "learning-management-system"
  ],
  "author": "LAILA Team",
  "license": "MIT"
}
